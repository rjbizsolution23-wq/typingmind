# RJ Business Solutions AI Chat Platform - Environment Variables Template
# Copy this file to .env and add your actual API keys
# NEVER commit .env file to version control

# ===========================
# AI/ML SERVICES API KEYS
# ===========================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI GPT API
OPENAI_API_KEY=sk-ant-your-key-here

# Google Gemini API
GEMINI_API_KEY=your-gemini-key-here

# Groq API
GROQ_API_KEY=gsk_your-groq-key-here

# Perplexity AI API
PERPLEXITY_API_KEY=pplx-your-key-here

# Together AI API
TOGETHER_API_KEY=your-together-ai-key-here

# ElevenLabs API (Text-to-Speech)
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Runway ML API (Video Generation)
RUNWAY_API_KEY=your-runway-key-here

# Stability AI API (Image Generation)
STABILITY_API_KEY=sk-your-stability-key-here

# ===========================
# CLOUD SERVICES
# ===========================

# Cloudflare API
CLOUDFLARE_API_TOKEN=your-cloudflare-token-here
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_ZONE_ID=your-zone-id-here

# ===========================
# SOCIAL MEDIA & COMMUNICATION
# ===========================

# Twitter/X API
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here

# Facebook Marketing API
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token-here
FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here

# Twilio Communication API
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here

# ===========================
# DATA & ANALYTICS PLATFORMS
# ===========================

# Kaggle API
KAGGLE_USERNAME=your-kaggle-username-here
KAGGLE_KEY=your-kaggle-key-here

# HuggingFace API
HUGGINGFACE_API_TOKEN=hf_your-huggingface-token-here

# ===========================
# APPLICATION CONFIGURATION
# ===========================

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Database (if applicable)
DATABASE_URL=your-database-connection-string

# Session Secret
SESSION_SECRET=your-session-secret-here

# ===========================
# SECURITY NOTES
# ===========================
# 1. NEVER commit this file with real API keys
# 2. Keep API keys secure and rotate them regularly
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. Limit API key permissions to minimum required scope
# 5. Monitor API usage for unusual activity

